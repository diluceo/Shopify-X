  <style>
    #shopx-content-slider-{{ section.id }} .con {
      border: 5px solid cyan;
    }
  </style>

<div id="shopx-content-slider-{{ section.id }}" class="container {{ section.settings.content_position }} test" style="background-color: {{ section.settings.background_color }}; min-height:{{ section.settings.min_height }};">

  <div class="content-con flex">
    <div class="con p-med flex-50">
      <div class="con-text" style="border: 1px solid red;">
        {% assign content_image = section.settings.content_image %}
        {%- if section.settings.content_image -%} <figure>{% render 'image-block', bg_image: content_image %}</figure> {%- endif -%}
        {%- if section.settings.content -%}<p style="color: {{ section.settings.text_color }};">{{ section.settings.content }}</p>{%- endif -%}
        {%- if section.settings.button_url_1 -%}<a class="btn shopx-btn" href="{{section.settings.button_url_1}}">{{section.settings.button_text_1}}</a>{%- endif -%}
      </div>
    </div>
    <div class="con flex-50">
      {% assign slider_image = section.settings.slider_image %}
      {%- if section.settings.slider_image -%} <figure>{% render 'image-block', bg_image: slider_image %}</figure>{%- endif -%}
    </div>
  </div>

  {%- if section.settings.bg_image != blank -%}
    <div class="bgimage" style="opacity: {{section.settings.bg_opacity}};">
      {% assign bg_image = section.settings.bg_image %}
      {% render 'image-block', bg_image: bg_image %}
    </div>
  {%- endif -%}

</div>

{% schema %}
{
  "name": "ShopX - Content Slider",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "content_image",
      "label": "Content Image"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "Lorem Ipsum dolor ipusm lorem ipsum dolor."
    },
    {
      "type": "text",
      "id": "button_text_1",
      "label": "Button Text 1",
      "default": "Button"
    },
    {
      "type": "url",
      "id": "button_url_1",
      "label": "Button URL 1"
    },
    {
      "type": "image_picker",
      "id": "slider_image",
      "label": "Content Image"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name":"ShopX - Content Slider"
    }
  ]
}
{% endschema %}