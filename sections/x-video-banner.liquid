<div id="shopx-video-banner-{{ section.id }}" class="container p-med test">
  <div class="content-con"> 
    <h1>{{ section.settings.heading }}</h1>
    {% render 'text-block' %}
    {% render 'text-block', text_tag: "h1", text_content: section.settings.heading %}
  </div>

  {%- if section.settings.show_vid or section.settings.bg_image != blank -%}
    {%- if section.settings.bg_opacity < 1 -%}
    <div class="bgimage" style="opacity: {{section.settings.bg_opacity}};">
    {%- else -%}
    <div class="bgimage">
    {%- endif -%}
        {%- if section.settings.show_vid -%}
          <video autoplay muted loop id="bgvideo">
            <source src="{{section.settings.vid_url}}" type="video/mp4">
          </video>
        {%- else -%}
            {% assign bg_image = section.settings.bg_image %}
            <!-- {% render 'image-block' %} -->
            {% render 'image-block', bg_image: bg_image %}
        {%- endif -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "ShopX - Video Banner",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum"
    },
    {
      "type": "checkbox",
      "id": "show_vid",
      "label": "Show Video"
    },
    {
      "type": "range",
      "id": "bg_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "unit": "%",
      "label": "Background Opacity",
      "default": 1
    },
    {
      "type": "url",
      "id": "vid_url",
      "label": "Video Url"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    }
  ],
  "presets": [
    {
      "name":"ShopX - Video Banner"
    }
  ]
}
{% endschema %}