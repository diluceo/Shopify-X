<div id="shopx-video-banner-{{ section.id }}" class="container p-med flex {{ section.settings.content_position }} test" style="background-color: {{ section.settings.background_color }}; min-height:{{ section.settings.min_height }};">
  <div class="content-con {{ section.settings.text_position }}">
    {%- if section.settings.heading -%}<h1 style="color: {{ section.settings.text_color }};">{{ section.settings.heading }}</h1>{%- endif -%}
    {%- if section.settings.content -%}<p style="color: {{ section.settings.text_color }};">{{ section.settings.content }}</p>{%- endif -%}
    {%- if section.settings.button_url_1 or section.settings.button_url_2 -%}
    <div class="button_group">
      {%- if section.settings.button_url_1 -%}<a class="btn shopx-btn" href="{{section.settings.button_url_1}}">{{section.settings.button_text_1}}</a>{%- endif -%}
      {%- if section.settings.button_url_2 -%}<a class="btn shopx-btn" href="{{section.settings.button_url_2}}">{{section.settings.button_text_2}}</a>{%- endif -%}
    </div>
    {%- endif -%}
  </div>

  {%- if section.settings.show_vid or section.settings.bg_image != blank -%}
    {%- if section.settings.bg_opacity < 1 -%}
    <div class="bgimage" style="opacity: {{section.settings.bg_opacity}};">
    {%- else -%}
    <div class="bgimage">
    {%- endif -%}
        {%- if section.settings.show_vid -%}
          <video autoplay muted loop id="bgvideo">
            <source src="{{section.settings.vid_url}}" type="video/mp4">
          </video>
        {%- else -%}
            {% assign bg_image = section.settings.bg_image %}
            <!-- {% render 'image-block' %} -->
            {% render 'image-block', bg_image: bg_image %}
        {%- endif -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "ShopX - Video Banner",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content",
      "default": "Lorem Ipsum dolor ipusm lorem ipsum dolor."
    },
    {
      "type": "text",
      "id": "button_text_1",
      "label": "Button Text 1",
      "default": "Button"
    },
    {
      "type": "url",
      "id": "button_url_1",
      "label": "Button URL 1"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Button Text 2",
      "default": "Button"
    },
    {
      "type": "url",
      "id": "button_url_2",
      "label": "Button URL 2"
    },
    {
      "type": "checkbox",
      "id": "show_vid",
      "label": "Show Video"
    },
    {
      "type": "range",
      "id": "bg_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "unit": "%",
      "label": "Background Opacity",
      "default": 1
    },
    {
      "type": "url",
      "id": "vid_url",
      "label": "Video Url"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text Position",
      "options": [
        {
          "value": "text-center",
          "label": "Text Center"
        },
        {
          "value": "text-right",
          "label": "Text Right"
        },
        {
          "value": "text-left",
          "label": "Text Left"
        }
      ],
      "default": "text-left"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        {
          "value": "flex-center",
          "label": "Center"
        },
        {
          "value": "flex-center-right",
          "label": "Center Right"
        },
        {
          "value": "flex-center-left",
          "label": "Center Left"
        },
        {
          "value": "flex-top-right",
          "label": "Top Right"
        },
        {
          "value": "flex-top-left",
          "label": "Top Left"
        },
        {
          "value": "flex-bottom-right",
          "label": "Bottom Right"
        },
        {
          "value": "flex-bottom-left",
          "label": "Bottom Left"
        }
      ],
      "default": "flex-center"
    },
    {
      "type": "text",
      "id": "min_height",
      "label": "Min Height",
      "default": "400px",
      "info": "use px, em, %, vh"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    }
  ],
  "presets": [
    {
      "name":"ShopX - Video Banner"
    }
  ]
}
{% endschema %}